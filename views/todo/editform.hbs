<form action="/todo/{{todo._id}}/edit" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input name="title" type="text" class="form-control" id="title" value="{{todo.title}}">
  </div>
    <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input name="description" type="text" class="form-control" id="description" value="{{todo.description}}">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>